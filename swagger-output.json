            "description": "Page number (default: 1)",
            "example": 1,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "recordPerPage",
            "in": "query",
            "description": "Records per page (default: 10)",
            "example": 10,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "keyword",
            "in": "query",
            "description": "Search by user name",
            "example": "John",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "active",
            "in": "query",
            "description": "Filter by active status",
            "example": true,
            "schema": {
              "type": "boolean"
            }
