                                "example": "male"
                              },
                              "birthday": {
                                "type": "string",
                                "example": "1990-01-15"
                              },
                              "interests": {
                                "type": "array",
                                "example": [
                                  "music",
                                  "travel"
                                ],
                                "items": {
                                  "type": "string"
                                }
                              },
                              "personalityTags": {
                                "type": "array",
                                "example": [
                                  "outgoing",
                                  "creative"
                                ],
                                "items": {
                                  "type": "string"
                                }
                              }
                            }
                          },
                          "setting": {
                            "type": "object",
                            "properties": {
                              "bleScanEnabled": {
                                "type": "boolean",
                                "example": true
                              },
                              "vibrationEnabled": {
                                "type": "boolean",
                                "example": false
                              },
                              "companionModeEnabled": {
