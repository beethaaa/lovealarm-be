                    },
                    "count": {
                      "type": "number",
                      "example": 10
                    },
                    "totalRecords": {
                      "type": "number",
                      "example": 21
                    },
                    "totalPages": {
                      "type": "number",
                      "example": 3
                    },
                    "currentPage": {
                      "type": "number",
                      "example": 1
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "_id": {
                            "type": "string",
                            "example": "507f1f77bcf86cd799439011"
                          },
                          "email": {
